<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_item_contact"
    android:clickable="true"
    android:foreground="@drawable/item_background">

    <ImageView
        android:id="@+id/imageContact"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="10dp"
        android:contentDescription="@string/content_description_image"
        android:scaleType="centerCrop"
        android:src="@drawable/user_placeholder_icon"
        android:adjustViewBounds="true"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="4">

        <TextView
            android:id="@+id/nameContact"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.6"
            android:text="Title or Name"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:gravity="bottom"/>

        <TextView
            android:id="@+id/phoneContact"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Phone"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:gravity="top"/>

    </LinearLayout>

</LinearLayout>