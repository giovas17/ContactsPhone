<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/refreshingLayoutContacts"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.softwaremobility.custom.EmptyRecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/padding_empty_recycler_view_contact_recipes"
            android:paddingRight="@dimen/padding_empty_recycler_view_contact_recipes"
            android:paddingEnd="@dimen/padding_empty_recycler_view_contact_recipes"
            android:paddingStart="@dimen/padding_empty_recycler_view_contact_recipes"
            android:id="@+id/listContacts">

        </com.softwaremobility.custom.EmptyRecyclerView>

    </android.support.v4.widget.SwipeRefreshLayout>

    <FrameLayout
        android:id="@+id/noData_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <TextView
            android:id="@+id/noData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:visibility="gone"
            android:textSize="@dimen/no_data_text_size"
            android:textAppearance="@style/TextAppearance.AppCompat.SearchResult.Subtitle" />

    </FrameLayout>
    <ProgressBar
        android:id="@+id/progressBarContacts"
        style="?android:attr/progressBarStyle"
        android:layout_width="@dimen/dialog_progress_widht"
        android:layout_height="@dimen/dialog_progress_height"
        android:visibility="visible"
        android:layout_centerInParent="true"/>

</RelativeLayout>