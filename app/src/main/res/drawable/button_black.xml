<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="2dp"/>
            <solid android:color="@color/black_button_pressed"/>
            <stroke android:color="@color/black_button" android:width="1dp"/>
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="2dp"/>
            <solid android:color="@color/disabledLoginButton"/>
            <stroke android:color="@color/black_light" android:width="1dp"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="2dp"/>
            <solid android:color="@color/black_button"/>
            <stroke android:color="@color/black_button" android:width="1dp"/>
        </shape>
    </item>

</selector>